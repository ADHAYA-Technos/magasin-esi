<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">View User</li>
  </ol>
</nav>

<div class="view-user p-5">
  {{#each rows}}
  <div class="row mb-5">
    <div class="col text-center">
      <h3>{{this.name}}</h3>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Full Name</th>
         
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">{{this.name}}</th>
            
            <td>{{this.email}}</td>
            <td>{{this.telephone}}</td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="row">
      <div class="col">
        <b>Description :</b>
      </div>
    </div>
    <div class="row">
      <div class="col">
        {{this.description}}
      </div>
    </div>

    <div class="row">
      <div class="col">
        <b>Status :</b>
      </div>
    </div>
      <div class="col">
  {{#if this.isActive}}
    active
  {{else}}
    inactive
  {{/if}}
</div>

   
  </div>
  {{/each}}
</div>